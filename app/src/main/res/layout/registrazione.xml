<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="151dp"
        android:layout_height="176dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sos_esperto__1__photoroom_png_photoroom" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="242dp"
        android:layout_height="57dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="32dp"
        android:text="Entra a far parte della famiglia di"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@+id/logo2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="238dp"
        android:layout_height="45dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:text="SOS-Esperto"
        android:textColor="#03A9F4"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/logo2"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/nomeTxtRe"
        android:layout_width="291dp"
        android:layout_height="54dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo2" />

    <EditText
        android:id="@+id/cognomeTxtRe"
        android:layout_width="291dp"
        android:layout_height="54dp"
        android:layout_marginStart="63dp"
        android:ems="10"
        android:hint="Cognome"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeTxtRe" />

    <EditText
        android:id="@+id/cittaTxtRe"
        android:layout_width="291dp"
        android:layout_height="54dp"
        android:layout_marginStart="63dp"
        android:ems="10"
        android:hint="CittÃ  di residenza"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

    <EditText
        android:id="@+id/provinciaTxtRe"
        android:layout_width="291dp"
        android:layout_height="54dp"
        android:layout_marginStart="63dp"
        android:ems="10"
        android:hint="Provincia"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cittaTxtRe" />

    <EditText
        android:id="@+id/emailTxtRe"
        android:layout_width="291dp"
        android:layout_height="54dp"
        android:layout_marginStart="63dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cognomeTxtRe" />

    <Button
        android:id="@+id/registratiBtnRe"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#03A9F4"
        android:text="Registrati"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/passwordTxtRe"
        android:layout_width="291dp"
        android:layout_height="53dp"
        android:layout_marginStart="63dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/provinciaTxtRe" />

    <EditText
        android:id="@+id/cpasswordTxtRe"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginStart="63dp"
        android:ems="10"
        android:hint="Conferma password"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTxtRe" />

    <CheckBox
        android:id="@+id/privacyCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="18dp"
        android:text="Ho letto l'informativa sulla privacy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cpasswordTxtRe" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="291dp"
        android:layout_height="52dp"
        android:layout_marginStart="63dp"
        android:ems="10"
        android:hint="Data di Nascita"
        android:inputType="date"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTxtRe" />

</androidx.constraintlayout.widget.ConstraintLayout>